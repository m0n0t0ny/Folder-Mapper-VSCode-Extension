{
  "name": "folder-mapper",
  "displayName": "Folder Mapper",
  "description": "Generate a .txt file that captures the entire structure of a directory, in a hierarchical tree format. This extension simplifies the process of visualizing complex project structures, providing developers and AI agents with an easy-to-read snapshot of your projectâ€™s architecture.",
  "version": "1.0.3",
  "publisher": "m0n0t0ny",
  "license": "MIT",
  "sponsor": {
    "url": "https://ko-fi.com/antoniobertuccio"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "folder",
    "mapper",
    "mapping",
    "structure",
    "project",
    "map",
    "tree",
    "generator",
    "hierarchy",
    "directory"
  ],
  "icon": "images/folder-mapper-icon.png",
  "galleryBanner": {
    "color": "#dfdfdf",
    "theme": "light"
  },
  "activationEvents": [
    "onView:folderMapper-view"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "folderMapper-viewContainer",
          "title": "Folder Mapper",
          "icon": "images/folder-mapper-icon.svg"
        }
      ]
    },
    "views": {
      "folderMapper-viewContainer": [
        {
          "id": "folderMapper-view",
          "name": "Folder Structure",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "folderMapper.selectFolder",
        "title": "Select Folder to Map",
        "category": "Folder Mapper"
      },
      {
        "command": "folderMapper.mapFolder",
        "title": "Map Folder Structure",
        "category": "Folder Mapper"
      },
      {
        "command": "folderMapper.selectOutputFolder",
        "title": "Select Output Folder",
        "category": "Folder Mapper"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "folderMapper.selectFolder",
          "when": "view == folderMapper-view",
          "group": "navigation"
        },
        {
          "command": "folderMapper.mapFolder",
          "when": "view == folderMapper-view",
          "group": "navigation"
        },
        {
          "command": "folderMapper.selectOutputFolder",
          "when": "view == folderMapper-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.11.0",
    "typescript": "^5.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/m0n0t0ny/folder-mapper.git"
  }
}
