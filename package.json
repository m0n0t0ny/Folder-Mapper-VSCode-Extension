{
  "name": "folder-mapper",
  "displayName": "Folder Mapper",
  "description": "Folder Mapper is a Visual Studio Code extension designed to generate a .txt file that captures the entire structure of your project, including directories and files, in a hierarchical tree format. This extension simplifies the process of documenting and visualizing complex project structures, providing developers with an easy-to-read snapshot of their projectâ€™s architecture. Whether you're sharing your project with others or organizing large codebases, Folder Mapper helps streamline project navigation and documentation.",
  "version": "1.0.2",
  "publisher": "m0n0t0ny",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "folder",
    "structure",
    "map",
    "documentation",
    "project",
    "mapper",
    "hierarchy",
    "generator",
    "directory",
    "tree",
    "view",
    "overview"
  ],
  "icon": "images/folder-mapper-icon.png",
  "galleryBanner": {
    "color": "#dfdfdf",
    "theme": "light"
  },
  "activationEvents": [
    "onView:folderMapper-view"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "folderMapper-viewContainer",
          "title": "Folder Mapper",
          "icon": "images/folder-mapper-icon.svg"
        }
      ]
    },
    "views": {
      "folderMapper-viewContainer": [
        {
          "id": "folderMapper-view",
          "name": "Folder Structure",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "folderMapper.selectFolder",
        "title": "Select Folder to Map",
        "category": "Folder Mapper"
      },
      {
        "command": "folderMapper.mapFolder",
        "title": "Map Folder Structure",
        "category": "Folder Mapper"
      },
      {
        "command": "folderMapper.selectOutputFolder",
        "title": "Select Output Folder",
        "category": "Folder Mapper"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "folderMapper.selectFolder",
          "when": "view == folderMapper-view",
          "group": "navigation"
        },
        {
          "command": "folderMapper.mapFolder",
          "when": "view == folderMapper-view",
          "group": "navigation"
        },
        {
          "command": "folderMapper.selectOutputFolder",
          "when": "view == folderMapper-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.11.0",
    "typescript": "^5.6.2"
  }
}
